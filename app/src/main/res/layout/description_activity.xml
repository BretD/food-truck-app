<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8dca862b"
    android:id="@+id/description_pg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food_truck_pic"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/chewys"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/truck_name"
        android:id="@+id/name_text"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:textSize="20sp"
        android:textColor="#ff6d383c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/menu_button"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:textColor="#ff3b291e"
        android:background="#ff7a5e7b"
        android:onClick="openMenu"/>
</LinearLayout>